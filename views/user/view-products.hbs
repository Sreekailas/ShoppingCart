<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 ">
                <div class="card " style="width: 15rem;height:21rem">
                    <img class="card-img-top pb-1" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title " >{{this.Name}}</h5>
                        <p class="card-text">Rs.{{this.Price}}</p>
                        <p class="card-text ">{{this.Description}}</p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</section>
