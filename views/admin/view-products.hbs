<section>
  <div class="container">
    <div class="row mt-4">
     <a href="/admin/add-product/{{this._id}}" class="btn btn-success ml-auto">Add products</a>
    </div>
    <table class="table mt-3">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th>Image</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td>{{this.Price}}</td>
          <td><img style="width: 50px;height:30px" src="/product-images/{{this._id}}.jpg" alt=""></td>

          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>